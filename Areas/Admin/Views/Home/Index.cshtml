                </div>
                <canvas id="salse-revenue"></canvas>
            </div>
        </div>
    </div>
</div>
<!-- Sales Chart End -->
<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Recent Salse</h6>
            <a href="">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">STT</th>
                        <th scope="col">Khách hàng</th>
                        <th scope="col">Giờ đặt</th>
                        <th scope="col">Giờ hẹn</th>
                        <th scope="col">Mẫu xe</th>
                        <th scope="col">Màu xe</th>
                        <th scope="col"></th>
                        <th scope="col">Lý do</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int STT = 1;
                    }
                    @foreach (var item in bookings)
                    {
                        <form method="post">
                        <tr>
                            <td>@(STT++)</td>
                            <td>@item.IdcustomerNavigation.Name</td>
                            <td>@item.BookingTime.Value.ToString("HH:mm dd/MM/yyyy")</td>
                            <td>@item.AppointmentTime.Value.ToString("HH:mm dd/MM/yyyy")</td>
                            <td>@item.IdcarNavigation.IdproductionModelNavigation.ProductionModelName</td>
                            <td>@item.IdcarNavigation.Color</td>
                            <td>

                                    <input type="number" name="Id" value="@item.Idbooking" hidden />
                                <button asp-action="Confirm" type="submit" class="btn btn-sm btn-primary" href="">Chấp nhận</button>

                                <button asp-action="Refuse" type="submit" class="btn btn-sm btn-primary" href="">Từ chối</button>
                            </td>
                            <td>
                                <input type="text" name="Message" />
                            </td>
                        </tr>
                        </form>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<!-- Recent Sales End -->
