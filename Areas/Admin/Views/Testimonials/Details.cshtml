@model CarRental.Models.TbTestimonial

@{
	ViewData["Title"] = "Thông tin đánh giá";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-12">
			<div class="bg-secondary rounded h-100 p-4">
				<h1 class="mb-4">Thông tin đánh giá</h1>
				<dl class="row text-white">
					<dt class="col-sm-2 mt-3">
						Tên
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.Name)
					</dd>
					<dt class="col-sm-2 mt-3">
						Doanh nghiệp
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.Profession)
					</dd>
					<dt class="col-sm-2 mt-3">
						Chi tiết
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.Detail)
					</dd>
					<dt class="col-sm-2 mt-3">
						Số sao
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.Star)
					</dd>
					<dt class="col-sm-2 mt-3">
						Ảnh
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.Image)
					</dd>

				</dl>
				<hr style="color:white" />
				<div>
					<a asp-action="Edit" asp-route-id="@Model?.Idtestimonial">Sửa</a> |
					<a asp-action="Index">Quay lại danh sách</a> |
					<a asp-action="Delete" asp-route-id="@Model?.Idtestimonial">Xóa</a>
				</div>
			</div>
		</div>
	</div>
</div>