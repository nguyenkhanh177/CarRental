@model CarRental.Models.TbMenu

@{
    ViewData["Title"] = "Tạo menu mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h1 class="mb-4">Tạo menu mới</h1>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-3">
                        <label asp-for="Title" class="control-label">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Alias" class="control-label">Đường dẫn</label>
                        <input asp-for="Alias" class="form-control" />
                        <span asp-validation-for="Alias" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Position" class="control-label">Vị trí</label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="ParentMenu" class="control-label">Menu cha</label>
                        <select asp-for="ParentMenu" class="form-control  text-light bg-body" asp-items="ViewBag.Menu">
                            <option value="0" selected>Không có</option>
                        </select>
                        <span asp-validation-for="ParentMenu" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" value="Create" class="btn btn-primary">Tạo menu</button>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Index">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
