@model IEnumerable<CarRental.Models.TbBlog>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="col-sm-12 col-xl-12">
		<div class="bg-secondary rounded h-100 p-4">
			<h6 class="mb-4">Quản lý blogs</h6>
			<p>
				<a asp-action="Create" asp-controller="Blogs" asp-area="Admin">Tạo mới</a>
			</p>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Tiêu đề</th>
						<th scope="col">Mô tả</th>
						<th scope="col">Thời gian phát hành</th>
						<th scope="col">Ảnh</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td class="col-3">
								@Html.DisplayFor(modelItem => item.Title)
							</td>
							<td class="col-3">
								@Html.DisplayFor(modelItem => item.Description)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.PublishTime)
							</td>
							<td>
								<img src="/img/Blog/@Html.DisplayFor(modelItem => item.Image)" widge = "100", height="60" />
							</td>
							<td>
								<div class="h-100 d-flex justify-content-between">
								<button class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Idblog" class="col-3">Chỉnh sửa</button>
								<button class="btn btn-primary" asp-action="Details" asp-route-id="@item.Idblog" class="col-3">Chi tiết</button>
								<button class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Idblog" class="col-3">Xóa</button>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>