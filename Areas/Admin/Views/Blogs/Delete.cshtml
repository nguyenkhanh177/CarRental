@model CarRental.Models.TbBlog

@{
	ViewData["Title"] = "Xóa blog";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-12">
			<div class="bg-secondary rounded h-100 p-4">
				<h1 class="mb-4">Xóa blog</h1>
				<h3>Bạn có chắc muốn xóa blog này?</h3>
				<dl class="row text-white">
					<dt class="col-sm-2 mt-3">
						Tiêu đề
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.Title)
					</dd>
					<dt class="col-sm-2 mt-3">
						Mô tả
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.Description)
					</dd>
					<dt class="col-sm-2 mt-3">
						Thời gian tạo
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.PublishTime)
					</dd>
					<dt class="col-sm-2 mt-3">
						Ảnh
					</dt>
					<dd class="col-sm-10 mt-3">
						<img src="@Html.DisplayFor(model => model.Image)" width="300" height="180">
					</dd>
					<dt class="col-sm-2 mt-3">
						Người tạo
					</dt>
					<dd class="col-sm-10 mt-3">
						@Html.DisplayFor(model => model.IdadminNavigation.Name)
					</dd>
				</dl>
				<hr style="color:white" />
				<form asp-action="Delete">
					<input type="hidden" asp-for="Idblog" />
					<input type="submit" value="Xóa blog" class="btn btn-danger" /> |
					<a asp-action="Index">Quay lại danh sách</a>
				</form>
			</div>
		</div>
	</div>
</div>

