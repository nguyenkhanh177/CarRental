@model string
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Đăng ký";
}

<div class="container-fluid overflow-hidden register py-5">
	<div class="container w-50 m-auto rounded-2">
		<form class="form" asp-action="RegisterAction" asp-controller="Register" method="post">
			<h3 class="mb-2 text-white">Đăng ký</h3>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Tài khoản</span>
				</div>
				<input name="Username" class="form-control" type="text" placeholder="Nhập tên tài khoản">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Mật khẩu</span>
				</div>
				<input name="Password" class="form-control" type="password" placeholder="Nhập mật khẩu">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Xác nhận</span>
				</div>
				<input name="RePassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span  class="ms-1">Số điện thoại</span>
				</div>
				<input name="Phone" class="form-control" type="text" placeholder="Nhập số điện thoại của bạn">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Email</span>
				</div>
				<input name="Email" class="form-control" type="text" placeholder="Nhập email của bạn">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Họ và tên</span>
				</div>
				<input name="Name" class="form-control" type="text" placeholder="Nhập họ và tên">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Căn cước</span>
				</div>
				<input name="ID" class="form-control" type="number" placeholder="Nhập căn cước công dân">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Ngày sinh</span>
				</div>
				<input name="Birth" class="form-control" type="date">
			</div>
			<div class="input-group">
				<div class="col-3 d-flex align-items-center bg-light text-body rounded-start p-2">
					<span class="ms-1">Địa chỉ</span>
				</div>
				<input name="Address" class="form-control" type="text" placeholder="Nhập địa chỉ nhà">
			</div>


			<button type="submit" href="#" class="btn btn-primary text-white rounded-2" name="register">Đăng ký</button>
			<p class="wrong text-danger">@Model</p>
			<p class="rege text-white">Nếu bạn đã có tài khoản, <a href="/Login">đăng nhập</a></p>
		</form>
	</div>
</div>
