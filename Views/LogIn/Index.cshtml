@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng nhập";
}

<div class="container-fluid overflow-hidden login py-5">
    <div class="container w-50 m-auto rounded-2">
        <div class="form">
            <h3 class="mb-3">Đăng nhập</h3>
             <input class="m-auto p-lg-2 rounded-1" id="username" name="username" type="text" placeholder="Nhập tên tài khoản" />
             <input class="mt-3 m-auto p-lg-2 rounded-1 " name="password" type="password" placeholder="Nhập mật khẩu" />
             <p class="mt-3 d-none">*Bạn nhập sai tài khoản hoặc mật khẩu</p>
             <button hr="#" class="mt-3 m-auto btn-primary text-capitalize text-white border-0 rounded-2 p-lg-2" name="login">Đăng nhập</button>
             <p class="mt-3">Nếu bạn chưa có tài khoản, <a href="#" class="">đăng ký</a></p>
         </div>
    </div>
</div>