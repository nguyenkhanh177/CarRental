@model TbBlog
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = @Model.Title;
	ViewBag.Active = 4;
}

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
	<div class="container text-center py-5" style="max-width: 900px;">
		<h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Our Blog & News</h4>
		<ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
			<li class="breadcrumb-item"><a href="index.html">Home</a></li>
			<li class="breadcrumb-item"><a href="#">Pages</a></li>
			<li class="breadcrumb-item active text-primary">Blog & News</li>
		</ol>
	</div>
</div>
<!-- Header End -->

<div class="container-fluid blog py-5">
	<div class="container py-5">
		
							<div class="blog-detail-item">
								<div class="blog-img">
									<img class="img-full" src="/img/Blog/@Model.Image" alt="Blog Image" width="100%">
								</div>
								<div class="blog-content text-start pb-0">
									<div class="blog-meta text-dim-gray pb-3">
										<div class="d-flex justify-content-between p-3">
											<div class="text-primary"><i class="fa-solid fa-calendar-days"></i> @Model.PublishTime.ToString("dd/MM/yyyy")</div>

											<div class="text-primary">
												<a href="javascript:void(0)"> <i class="fa-solid fa-comment"></i> @Model.TbBlogComments.Count() bình luận</a>
											</div>
											<div class="text-primary">
												<a href="javascript:void(0)"> <i class="fa-solid fa-share"></i> Chia sẻ</a>
											</div>

										</div>
									</div>
									<h5 class="title mb-4 text-primary fw-bold">
										@Model.Title
									</h5>

									<div class="inner-content">
										<p class="mb-0">
											@Html.DisplayFor(m => m.Detail)
										</p>
										<span class="text-primary float-end">@Model.IdadminNavigation.Name</span>

										<hr class="m-5" />

										<div class="blog-comment pt-10">
											<h4 class="heading mb-7"> @Model.TbBlogComments.Count() comment</h4>

											@foreach (var item in Model.TbBlogComments)
											{
												<div class="d-flex justify-content-lg-start m-3 border border-4 rounded-3">

													<img src="/img/avatar/@item.IdcustomerNavigation.Avatar" alt="Avatar" width="80px" height="80px" class="rounded-circle m-3" />
													<div>
														<div class="m-1"><strong class="text-primary"><i class="fa-solid fa-user"> </i>@item.IdcustomerNavigation.Name</strong> - <strong><i class="fa-solid fa-calendar-days"></i> @item.Time.ToString("HH:mm dd/MM/yyyy")</strong></div>
														<p class="user-comment mb-0">@item.Detail</p>
													</div>
												</div>



											}
										</div>

										<div>
											<br />
											<h4 class="text-primary m-3">Để lại một bình luận</h4>
											<form asp-action="comment" method="post">
												<div>
													<div class="form-group m-3">
														<textarea asp-action="comment" name="Detail" placeholder="Nội dung bình luận" class="w-100 rounded-3 border border-3" style="height:200px"></textarea>
													</div>
													<div class="w-100 d-flex justify-content-center form-group">
														<button type="submit" value="submit" class="btn btn-primary" name="submit">Bình luận</button>
													</div>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>


