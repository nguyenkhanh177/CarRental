@model IEnumerable<CarRental.Models.TbCar>

<div class="container-fluid categories py-5">
	<div class="container pb-5">
		<div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
			<h1 class="display-5 text-capitalize mb-3">Danh mục <span class="text-primary">xe </span></h1>
			<p class="mb-0">
				Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ut amet nemo expedita asperiores commodi accusantium at cum harum, excepturi, quia tempora cupiditate! Adipisci facilis modi quisquam quia distinctio,
			</p>
		</div>
		<div class="categories-carousel owl-carousel wow fadeInUp" data-wow-delay="0.1s">
			@foreach (var item in Model)
			{
				<div class="categories-item p-4">
					<div class="categories-item-inner">
						<div class="categories-img rounded-top">
							<img src="@item.Image" class="w-100 rounded-top" height="250px" alt="">
						</div>
						<div class="categories-content rounded-bottom p-4">
							<h4>@item.IdproductionModelNavigation.ProductionModelName</h4>
							<div class="categories-review mb-4">
								<div class="d-flex justify-content-center text-secondary">
									@{
										int i;
										for (i = 0; i < item.IdproductionModelNavigation.Star; i++)
										{
											<i class="fas fa-star"></i>
										}
										for (int k = 0; k < 5 - i; k++)
										{
											<i class="fas fa-star text-body"></i>
										}
									}
								</div>
							</div>
							<div class="mb-4">
								<h4 class="bg-white text-primary rounded-pill py-2 px-4 mb-0">@item.Price/Ngày</h4>
							</div>
							<div class="row gy-2 gx-0 text-center mb-4">
								<div class="col-4 border-end border-white">
									<i class="fa fa-users text-dark"></i> <span class="text-body ms-1">@item.IdproductionModelNavigation.SeatingCapacity chỗ</span>
								</div>
								<div class="col-4 border-end border-white">
									<i class="fa fa-car text-dark"></i> <span class="text-body ms-1">@item.IdproductionModelNavigation.IdautomakerNavigation.AutomakerName</span>
								</div>
								<div class="col-4">
									<i class="fa fa-gas-pump text-dark"></i> <span class="text-body ms-1">@item.IdproductionModelNavigation.IdfuelNavigation.FuelName</span>
								</div>
								<div class="col-4 border-end border-white">
									<i class="fa fa-car text-dark"></i> <span class="text-body ms-1">@item.Color</span>
								</div>
								<div class="col-4 border-end border-white">
									<i class="fa fa-cogs text-dark"></i> <span class="text-body ms-1">@item.IdproductionModelNavigation.IdgearboxNavigation.GearboxName</span>
								</div>
								<div class="col-4">
									<i class="fa fa-road text-dark"></i> <span class="text-body ms-1">@item.IdproductionModelNavigation.IddriverCapabilitiesNavigation.DriverCapabilitiesName</span>
								</div>
							</div>
							<a href="/Home/Car?IdproductionModel=@item.IdproductionModel&Color=@item.Color" class="btn btn-primary rounded-pill d-flex justify-content-center py-3">Đặt ngay</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>